<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"

    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="@dimen/cardview_compat_inset_shadow"
    android:background="@color/Splashcolor"
    android:outlineSpotShadowColor="@color/color1"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="411dp"
        android:layout_height="414dp"
        android:layout_margin="8dp"
        android:background="@drawable/gradient_login"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="418dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="421dp"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/image_a"
                    android:layout_width="188dp"
                    android:layout_height="160dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"
                    android:background="@android:color/transparent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/add_btn" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="189dp"
                        android:layout_height="wrap_content"
                        android:text="Nom de produit:"
                        android:textColor="@color/color1"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/name_a"
                        android:layout_width="222dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="serif"
                        android:hint="Name"
                        android:textColor="@color/primaryTextColor"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="188dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Details:"
                        android:textColor="@color/color1"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/description_a"
                        android:layout_width="222dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="serif"
                        android:hint="Descrption"
                        android:textColor="@color/contentTextColor"
                        android:textSize="24sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="269dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Prix initial (TND):"
                        android:textColor="@color/color1"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/cost_a"
                        android:layout_width="222dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="serif"
                        android:hint="Cost"
                        android:inputType="numberDecimal"
                        android:textColor="@color/contentTextColor"
                        android:textSize="24sp"
                        android:textStyle="italic" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="150dp">

                    <Button
                        android:id="@+id/supprimerproduit_a"
                        android:layout_width="182dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="146dp"
                        android:layout_marginBottom="50dp"
                        android:background="@drawable/ic_tags_bk"
                        android:text="Supprimer"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/ajouterabid_a"
                        android:layout_width="157dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="241dp"
                        android:layout_marginBottom="102dp"
                        android:background="@drawable/ic_tags_bk"
                        android:text="ENCHERE"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/modifierproduit_a"
                        android:layout_width="157dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginEnd="65dp"
                        android:layout_marginBottom="103dp"
                        android:background="@drawable/ic_tags_bk"
                        android:text="modifier"
                        android:textSize="25dp"
                        android:textStyle="bold" />

                </RelativeLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>


    </LinearLayout>
</androidx.cardview.widget.CardView>