<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="500dp"
    android:outlineSpotShadowColor="@color/colorPrimary"
    android:scrollbarAlwaysDrawHorizontalTrack="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    app:cardCornerRadius="2dp"
    app:cardElevation="10dp"
    android:layout_marginBottom="@dimen/cardview_compat_inset_shadow"
    >

    <LinearLayout
        android:layout_width="553dp"
        android:layout_height="509dp"
        android:layout_margin="8dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_a"
            android:layout_width="392dp"
            android:layout_height="104dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:adjustViewBounds="true"
            android:background="@android:color/transparent"
            android:scaleType="centerCrop"
            android:src="@mipmap/add_btn" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bangers"
            android:text="Produits details :"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/name_a"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="Name"
            android:textColor="@color/Splashcolor"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/description_a"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="Descrption"
            android:textColor="#000"
            android:textSize="20dp"
            android:textStyle="normal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cost_a"
                android:layout_width="181dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="Cost"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/cost_b"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:text="Cost"
                android:textColor="#000"
                android:textSize="20dp"
                android:textStyle="italic" />

        </LinearLayout>

        <TextView
            android:id="@+id/dateajout"
            android:layout_width="257dp"
            android:layout_height="wrap_content"
            android:text="TextView"
            android:textColor="#F80C0C"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bid_a"
                android:layout_width="126dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_tags_bk"
                android:text="Bid"
                android:textSize="25dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/afficherbid_a"
                android:layout_width="128dp"
                android:layout_height="50dp"
                android:background="@drawable/ic_tags_bk"
                android:text="Actuel"
                android:textSize="25dp"
                android:textStyle="bold" />
        </LinearLayout>


    </LinearLayout>
</androidx.cardview.widget.CardView>