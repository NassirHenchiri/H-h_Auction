<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Inscription">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bgcard"
        android:orientation="vertical"
        android:padding="40dp">

        <TextView
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Inscription"
            android:textColor="#0F0F0F"
            android:textSize="25dp"
            android:textStyle="bold|italic" />

        <EditText
            android:id="@+id/username"
            android:layout_width="233dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_editext"
            android:hint="Tapez votre Username"
            android:inputType="text"
            android:maxLength="30"
            android:paddingLeft="18dp" />

        <EditText
            android:id="@+id/email"
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_editext"
            android:hint="Tapez votre email"
            android:layout_gravity="center"
            android:inputType="textEmailAddress"
            android:paddingLeft="18dp" />

        <EditText
            android:id="@+id/passwordI"
            android:layout_width="235dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_editext"
            android:hint="Tapez votre mot de passe"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="18dp" />

        <EditText
            android:id="@+id/passwordC"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_editext"
            android:hint="Confirmer mot de passe"
            android:layout_gravity="center"
            android:inputType="textPassword"
            android:maxLength="20"
            android:paddingLeft="18dp" />

        <Button
            android:id="@+id/enregister"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_btn"
            android:text="ENREGISTRER"
            android:textColor="#FFFFFF"
            android:textSize="16dp" />

    </LinearLayout>

</RelativeLayout>